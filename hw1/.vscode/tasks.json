{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile LaTeX with XeLaTeX",
            "type": "shell",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "${workspaceFolder}/Latex/Main.tex"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Latex"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Clean LaTeX auxiliary files",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "rm -f *.aux *.log *.bbl *.blg *.toc *.out *.synctex.gz *.fls *.fdb_latexmk"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Latex"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Open PDF",
            "type": "shell", 
            "command": "bash",
            "args": [
                "-lc",
                "xdg-open '${workspaceFolder}/Latex/Main.pdf' >/dev/null 2>&1 &"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build and Open PDF",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile LaTeX with XeLaTeX",
                "Open PDF"
            ],
            "group": "build"
        }
    ]
}
